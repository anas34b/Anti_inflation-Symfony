{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}
{% block monTitre %}Voici les types d'aliments{% endblock %}
{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}
<a href="{{path('ajoutTypes')}}" class="col btn btn-success">ajouter</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
    </tr>
  </thead>
  <tbody>
{% for type in types %}
    <tr>
      <th scope="row">{{ type.id }}</th>
      <td>{{ type.nom }}</td>
      <td>
        <div class="row no-gutters">
            <td><a class="col btn btn-danger" href="{{ path('Supprimertype', {'id': type.id}) }}">supprimer</a><td>
        </div>
      </td>
    </tr>
{% endfor %}
  </tbody>
</table>
{% endblock %}
